@model IEnumerable<SafeWheel3.Models.Bookmark>

@{
    ViewData["Title"] = "Bookmarks";
   
}


    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            border-radius: 10px;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            }

        .card-body {
            text-align: center;
        }

        .btn-custom {
        background-color: #f39c12;
            color: white;
            border-radius: 50px;
        }

            .btn-custom:hover {
            background-color: #f39c12;
                color: white;
            }

        .alert-custom {
            background-color: #d4edda;
            color: #155724;
        }

        .bookmark-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .bookmark-header h1 {
                font-size: 2.5em;
                font-weight: bold;
            }

            .bookmark-header .btn {
                font-size: 1.2em;
                padding: 10px 20px;
            }

        .card-title {
            font-size: 1.5em;
            font-weight: bold;
        }

        .card-text {
            font-size: 1.2em;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid rgba(0, 0, 0, 0.125);
        }

        .bookmark-container {
            padding-top: 20px;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-image: url('https://static.vecteezy.com/system/resources/previews/000/537/175/original/plate-metal-background-vector-illustration.jpg');
            background-size: cover;
            background-attachment: fixed;
            color: #333 !important;
        }

        header {
            background-color: #2c3e50 !important;
        }

        .navbar-brand, .nav-link {
            color: #ecf0f1 !important;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #f39c12;
            }

        footer {
            background-color: #2c3e50;
            color: #ecf0f1;
        }

        .footer a {
            color: #f39c12;
        }

            .footer a:hover {
                color: #e74c3c;
            }

    </style>


<header class="text-white text-center py-3 mb-2">
    <div class="container">
        <h1 class="font-weight-light">Parcările mele</h1>
    </div>
</header>

<div class="container bookmark-container">
    <div class="bookmark-header">
        @if (ViewBag.Message != null)
        {
            <h2 class="alert alert-custom p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
        }
        <a class="btn btn-custom mb-5" href="/Bookmarks/New">
            <i class="bi bi-plus"></i> Creează o parcare nouă
        </a>
    </div>

    <div class="row">
        @foreach (var bookmark in ViewBag.Bookmarks)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title" name="Name">@bookmark.Name</h5>

                        @if (ViewBag.EsteAdmin)
                        {
                            <div class="card-text"><i class="bi bi-person"></i> Creat de: @bookmark.User.UserName</div>
                        }

                        <br />

                        <a class="btn btn-custom" href="/Bookmarks/Show/@bookmark.Id">Afisare parcare</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
