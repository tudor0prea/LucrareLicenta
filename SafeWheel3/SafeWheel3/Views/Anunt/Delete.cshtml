@model SafeWheel3.Models.Anunt

@{
    ViewData["Title"] = "Delete";
}

<h1>Ștergere anunț</h1>

<h3>Sunteți sigur că doriți să ștergeți acest anunț?</h3>
<div>
    <h4>Anunt</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pret)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pret)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFabricatiei)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFabricatiei.Value)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dealer.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dealer.Nume)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Șterge anunțul" class="btn btn-danger" />
        <a asp-action="Index">Înapoi</a>
    </form>
</div>
