@model SafeWheel3.Models.Anunt

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Create Anunt</h1>

<form enctype="multipart/form-data" asp-controller="Anunt" asp-action="Create" class="p-4 shadow-sm bg-light rounded">

    <div class="row mb-3">
        <div class="col-md-6 form-group">
            <label asp-for="DealerId" class="form-label">Dealer</label>
            <select asp-for="DealerId" asp-items="ViewBag.Dealers" class="form-control">
                <option value="">Selectați dealerul</option>
            </select>
            <span asp-validation-for="DealerId" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Marca" class="form-label">Model</label>
            <input asp-for="Marca" class="form-control" placeholder="Modelul autoturismului, motorizarea, etc" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6 form-group">
            <label asp-for="Pret" class="form-label">Preț</label>
            <input asp-for="Pret" class="form-control" placeholder="în euro" />
            <span asp-validation-for="Pret" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="DataFabricatiei" class="form-label">Data fabricației</label>
            <input asp-for="DataFabricatiei" class="form-control" />
            <span asp-validation-for="DataFabricatiei" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Descriere</label>
        <textarea asp-for="Description" class="form-control" placeholder="Spune despre mașina ta ce ai vrea tu să auzi..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-6 form-group">
            <label asp-for="Km" class="form-label">Kilometraj</label>
            <input asp-for="Km" class="form-control" placeholder="Rulajul real al mașinii (oricum vom descoperi dacă nu este așa :) )" />
            <span asp-validation-for="Km" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="NrTel" class="form-label">Telefon de contact</label>
            <input asp-for="NrTel" class="form-control" placeholder="+0407..." />
            <span asp-validation-for="NrTel" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Imaginea principală</label>
        <input class="form-control" type="file" name="AnuntImage" />
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Galeria de fotografii</label>
        <input class="form-control" type="file" name="AnuntImages" multiple />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Publică anunțul</button>
    </div>
</form>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    h1 {
        font-size: 2.5rem;
        color: #343a40;
    }

    .form-label {
        font-weight: bold;
        color: #495057;
    }

    .form-control {
        border-radius: 0.375rem;
        padding: 0.75rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .rounded {
        border-radius: 0.375rem;
    }

    .row {
        margin-bottom: 1.5rem;
    }
</style>
