            </svg>
            Anunțuri
        </h1>

        @if (ViewBag.Message != null)
        {
            <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
        }
        @{
            var message = TempData["message"] as string;
        }

        @if (!string.IsNullOrEmpty(message))
        {
            <h2 class="alert-success p-3 rounded-3 text-center mb-5">@message</h2>
        }

        <div class="search-section">
            <form method="GET">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Ce doriți să căutați astăzi?" name="search" value="@ViewBag.SearchString">
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label for="minPrice">
                            
