@model IEnumerable<SafeWheel3.Models.Anunt>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SafeWheel3</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" /> 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SafeWheel3.styles.css" asp-append-version="true" />


    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-image: url('https://static.vecteezy.com/system/resources/previews/000/537/175/original/plate-metal-background-vector-illustration.jpg');
            background-size: cover;
            background-attachment: fixed;
            color: #333;
        }

        header {
            background-color: #2c3e50;
        }

        .navbar-brand, .nav-link {
            color: #ecf0f1 !important;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #f39c12 important;
            }

        

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            border-radius: 10px;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            }

        .search-section {
            margin-bottom: 20px;
        }

            .search-section .form-control,
            .search-section .btn,
            .search-section select {
                margin-bottom: 10px;
            }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            text-align: center;
        }

        .btn-success {
            background-color: #f39c12;
            color: white;
            border-radius: 50px;
            padding: 10px 20px;
            border-color: #f39c12;
            transition: background-color 0.3s;
        }

            .btn-success:hover {
                background-color: #f39c12;
                
                color: black;
                border-color: black;
            }
    </style>
</head>
<body>
   
    <div class="container">
        <h1 class="mt-4 mb-4 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
